<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/containerLocation"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:drawablePadding="5dp"
            android:text="@string/orders_menu_item"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_color"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24"
            app:drawableTint="@android:color/darker_gray" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_height="wrap_content">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/dateTextPurpose"
            android:textColor="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/orderType"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/destination_reached"
            android:id="@+id/destionation"
            android:textColor="@color/new_gray"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/dateTextPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:minHeight="100dp"
            app:cardElevation="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/card_color"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:minHeight="100dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0dp"
                    android:id="@+id/header_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:minHeight="40dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:scaleType="fitXY"
                        style="@style/card_provider"
                        app:cardElevation="0dp"
                        android:minHeight="40dp"
                        app:cardBackgroundColor="@color/normal_order_color"
                        android:id="@+id/titleImageHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/dateTime"
                        android:text="dasddas"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/dateTime"
                        android:text="|"
                        android:id="@+id/spliter"
                        android:layout_marginStart="5dp"
                        android:layout_width="1dp"
                        android:layout_height="12dp"/>


                    <TextView
                        app:layout_constraintStart_toEndOf="@+id/spliter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="orderName"
                        android:id="@+id/orderPurpose"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="10dp"
                        android:text="orderName"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/pickupImage"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_location_pickup"
                    app:layout_constraintTop_toBottomOf="@+id/header_card"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_marginStart="12dp"
                    android:textColor="@color/order_subtitle_color"
                    android:text="@string/title_pickup_location"
                    app:layout_constraintStart_toEndOf="@+id/pickupImage"
                    app:layout_constraintBottom_toTopOf="@+id/pickupImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/pickUpDestination"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black"
                    android:text="@string/title_pickup_location"
                    app:layout_constraintStart_toEndOf="@+id/pickupImage"
                    app:layout_constraintTop_toBottomOf="@+id/pickupImage"
                    app:layout_constraintBottom_toBottomOf="@+id/pickupImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:minHeight="70dp"
                app:layout_constraintStart_toStartOf="@+id/pickUpDestination"
                app:layout_constraintTop_toBottomOf="@+id/pickUpDestination"
                android:id="@+id/fromContainer"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/customer_name"
                    android:textColor="@color/gray"
                    android:id="@+id/customerName"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/userName"
                    app:layout_constraintStart_toStartOf="@+id/customerName"
                    app:layout_constraintTop_toBottomOf="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/callPickUp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/call_cell"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <ImageView
                    android:id="@+id/callDestination"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/callPickUp"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/ic_whats_app"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@+id/fromContainer"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/destionationLocationReached"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dsstinationImage"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_location_pickup"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:layout_marginStart="12dp"
                        android:textColor="@color/order_subtitle_color"
                        android:text="@string/title_destination_location"
                        app:layout_constraintStart_toEndOf="@+id/dsstinationImage"
                        app:layout_constraintBottom_toTopOf="@+id/dsstinationImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/destinationLocation"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:text="@string/title_pickup_location"
                        app:layout_constraintStart_toEndOf="@+id/dsstinationImage"
                        app:layout_constraintTop_toBottomOf="@+id/dsstinationImage"
                        app:layout_constraintBottom_toBottomOf="@+id/dsstinationImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="70dp"
            app:layout_constraintStart_toStartOf="@+id/destinationLocation"
            app:layout_constraintTop_toBottomOf="@+id/destinationLocation"
            android:id="@+id/fromContainerDest"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/customer_name"
                android:textColor="@color/gray"
                android:id="@+id/customerNameDest"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/userNameCustomerDest"
                app:layout_constraintStart_toStartOf="@+id/customerNameDest"
                app:layout_constraintTop_toBottomOf="@+id/customerNameDest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/callPickUpCustomerDest"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:src="@drawable/call_cell"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/callDestinationCustomerDest"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/callPickUpCustomerDest"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_whats_app"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/extraPricesRecycle"
        app:layout_constraintBottom_toTopOf="@+id/guideLineScreen"
        app:layout_constraintTop_toBottomOf="@+id/containerLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.Guideline
        app:layout_constraintGuide_percent=".85"
        android:id="@+id/guideLineScreen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toTopOf="@+id/completeOrder"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/amount"
            android:textColor="@color/gray"
            android:id="@+id/amountHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/priceValue"
            android:text=""
            android:textColor="@color/blue"
            app:layout_constraintEnd_toStartOf="@+id/priceType"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/priceValue"
            app:layout_constraintBottom_toBottomOf="@+id/priceValue"
            android:id="@+id/priceType"
            android:textColor="@color/blue"
            android:text="@string/kwd"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/completeOrder"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:insetTop="0dp"
        android:visibility="gone"
        android:insetBottom="0dp"
        android:text="@string/complete"
        android:textAllCaps="true"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/payButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/payButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/pay_now"
        android:textAllCaps="true"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>