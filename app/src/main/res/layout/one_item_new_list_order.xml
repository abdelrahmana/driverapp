<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="100dp"
    android:layout_marginTop="15dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_color"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:id="@+id/header_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:scaleType="fitXY"
            style="@style/card_provider"
            app:cardElevation="0dp"
            android:minHeight="40dp"
            app:cardBackgroundColor="@color/normal_order_color"
            android:id="@+id/titleImageHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/dateTime"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dateTime"
            android:text="|"
            android:id="@+id/splitter"
            android:layout_marginStart="5dp"
            android:layout_width="1dp"
            android:layout_height="12dp"/>

        <TextView
            app:layout_constraintTop_toTopOf="@+id/dateTime"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/dateTime"
            app:layout_constraintStart_toEndOf="@+id/splitter"
            android:id="@+id/purpose"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:text="orderName"
            android:id="@+id/orderName"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/pickupImage"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_location_pickup"
        app:layout_constraintTop_toBottomOf="@+id/header_card"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <TextView
        android:layout_marginStart="12dp"
        android:textColor="@color/order_subtitle_color"
        android:text="@string/title_pickup_location"
        app:layout_constraintStart_toEndOf="@+id/pickupImage"
        app:layout_constraintBottom_toTopOf="@+id/pickupImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pickUpDestination"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:text="@string/title_pickup_location"
        app:layout_constraintStart_toEndOf="@+id/pickupImage"
        app:layout_constraintTop_toBottomOf="@+id/pickupImage"
       app:layout_constraintBottom_toBottomOf="@+id/pickupImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/pickUpDestination"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dsstinationImage"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_location_pickup"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_marginStart="12dp"
            android:textColor="@color/order_subtitle_color"
            android:text="@string/title_destination_location"
            app:layout_constraintStart_toEndOf="@+id/dsstinationImage"
            app:layout_constraintBottom_toTopOf="@+id/dsstinationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/destinationLocation"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:text="@string/title_pickup_location"
            app:layout_constraintStart_toEndOf="@+id/dsstinationImage"
            app:layout_constraintTop_toBottomOf="@+id/dsstinationImage"
            app:layout_constraintBottom_toBottomOf="@+id/dsstinationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>